{
    "version": 2,
    "installCommand": "npm install --legacy-peer-deps",
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },  
      { "src": "/(.*)", "dest": "/index.html" }
    ],
    "functions": {
      "api/index.js": { "maxDuration": 10 }
    }
  }
  